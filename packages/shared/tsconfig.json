{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "jsx": "preserve",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": ["."]
}
